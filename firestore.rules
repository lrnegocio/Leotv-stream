rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /content/{contentId} {
      allow read, write: if true;
    }
    
    match /settings/adultContent {
      allow read, write: if true;
    }
    
    match /sessions/{sessionId} {
      allow read, write: if true;
    }
  }
}
