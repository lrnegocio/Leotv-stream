
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@example.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ----------------------------------------------------------------------
    // User Profiles & ALL Subcollections (Recursive)
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to user documents and ALL their subcollections recursively.
     * @path /users/{userId} and /users/{userId}/{document=**}
     * @allow (read, write) Admins have full read/write access to any user's document and all subcollections.
     *        This is CRITICAL for allowing recursive deletes from the admin panel and for admins to manage sessions.
     * @allow (list, create, update) A user can manage documents within their own subcollections (e.g., creating/updating a session).
     */
    match /users/{userId}/{document=**} {
      allow read, write: if isAdmin();
      allow list, create, update: if isOwner(userId);
    }
     match /users/{userId} {
      allow get, update: if isOwner(userId);
       // Admins get full access from the recursive rule above.
    }

    // ----------------------------------------------------------------------
    // Public Content: Channels, Seasons, Episodes (Recursive)
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to all public content collections recursively.
     * @path /channels/{channelId} and its subcollections.
     * @allow (read) Any authenticated user can read channel, season, and episode data.
     * @allow (write) Only admins can manage content (create, update, delete at all levels).
     */
    match /channels/{channelId}/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
